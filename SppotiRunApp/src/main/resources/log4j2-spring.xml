<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Properties>
        <Property name="path">${sys:LOG_PATH}</Property>
    </Properties>
    <Appenders>
        <!-- 1. Console Appender -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>
        </Console>
        <!-- 2. File Appender with file "${path}/app_log.log" -->
        <File name="App-Appender" fileName="${path}/sppoti_log.log">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>
        </File>
        <!-- 3. File Appender with file "${path}/springboot_log.log" -->
        <File name="SpringBoot-Appender" fileName="${path}/springboot_log.log">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>
        </File>
        <!--Error logs-->
        <File name="FileAllErrors" fileName="${path}/sppoti_errors.log" immediateFlush="true" append="true">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="SpringBoot-Appender" level="INFO"/>
            <AppenderRef ref="App-Appender" level="INFO" />
            <AppenderRef ref="FileAllErrors" level="ERROR" />
            <AppenderRef ref="console" level="INFO" />
        </Root>
    </Loggers>
</Configuration>