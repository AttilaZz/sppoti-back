<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.sppoti</groupId>
    <artifactId>sppoti</artifactId>
    <version>1.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <name>Sppoti Web Application</name>

    <properties>
        <org.apache.commons.version>3.0</org.apache.commons.version>
    </properties>

    <modules>
        <module>SppotiApi</module>
        <module>SppotiRepositoriy</module>
        <module>SppotiCommons</module>
        <module>SppotiCore</module>
        <module>SppotiRunApp</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.4.2.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.sppoti</groupId>
                <artifactId>SppotiApi</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.sppoti</groupId>
                <artifactId>SppotiRepositoriy</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.sppoti</groupId>
                <artifactId>SppotiCommons</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.sppoti</groupId>
                <artifactId>SppotiCore</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${org.apache.commons.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>developpement</id>
            <properties>
                <environment>dev</environment>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>qualification</id>
            <properties>
                <environment>qualif</environment>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <environment>prod</environment>
            </properties>
        </profile>
    </profiles>
</project>